.container-fluid
  %div{ ng: { repeat: "product in products" }}
    .container{ ng: { if: "product.on_hand_count > 0 && product.available" } }
      .panel
        .panel-body
          .alert.alert-danger{ ng: { if: "productErrors" }}
            %ul{ ng: { repeat: "val in productErros" }}
              %li
                {{ val }}
          %form
            .form-group
              %h6
                {{ product.name }}
              %h6
                {{ product.price | currency :symbol : factionSize }}
            .form-group
              %image{ ng: { src: "{{ product.picture_url }}" }}
            .form-group
            - unless current_user.nil?
              %button.btn.btn-success{ ng: { click:"addToCart(product)" }}
                Add To Cart
              %input.input-sm{ type: "number", min: 1, max: "{{ product.on_hand_count }}", ng: { model: "product.quantity" }}
