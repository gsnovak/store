
.table-wrapper
  %h3 Products
  %table.mdl-data-table.mdl-js-data-table.mdl-shadow--8dp
    %thead
      %tr
        %th.mdl-data-table__cell--non-numeric Name
        %th.mdl-data-table__cell--non-numeric Available
        %th On Hand #
        %th Price (USD)
        %th
    - @source_models.each do |product|
      %tbody
        %tr
          %td.mdl-data-table__cell--non-numeric= product.name
          %td.mdl-data-table__cell--non-numeric= product.available
          %td= product.on_hand_count
          %td= product.price
          %td= link_to('Edit', edit_admin_product_path(product))
          %td= link_to "Delete", admin_product_path(product), data: { confirm: 'Are you certain you want to delete this?' }, method: :delete
