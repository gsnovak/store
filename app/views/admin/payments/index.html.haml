.table-wrapper
  %h3 Payments
  .tableContainer-1
    .tableContainer-2
    %table.mdl-data-table.mdl-js-data-table.mdl-shadow--8dp
      %thead
        %tr
          %th.mdl-data-table__cell--non-numeric Payment ID
          %th Amount
          %th
      - @payments.each do |payment|
        %tbody
          %tr
            %th= payment.id
            %td= payment.amount
            %td.mdl-data-table__cell--non-numeric= link_to "Delete", admin_payment_path(payment), method: :delete, remote: true, data: { confirm: 'Are you certain you want to delete this?' }
